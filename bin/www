#!/usr/bin/env node --harmony

const co    = require('co');

const debugLog  = require('../lib/debug-log');
const models    = require('../models');
const app       = require('../');

co(function *() {
    yield models.sequelize.sync({ force: true });
    app.listen(process.env.PORT);
    debugLog.http('Listening on', process.env.PORT);
})
    .catch(console.error);